<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gok.luisanillo.kingsconquest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        !-- MainActivity - Contains the menu --!
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        !-- HelpMenuActivity - Contains the help --!
        <activity
            android:name=".HelpMenu"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".CreditsMenu" />
        <activity
            android:name=".MainGameActivty"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_game_activty"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"></activity>
    </application>

</manifest>