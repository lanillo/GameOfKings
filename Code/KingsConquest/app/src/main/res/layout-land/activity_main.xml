<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.gok.luisanillo.kingsconquest.MainActivity">

    <ImageButton
        android:id="@+id/newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:background="#0000"
        android:contentDescription="@string/NewGame"
        android:onClick="newGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/loadgame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507"
        app:srcCompat="@drawable/newgame" />

    <ImageButton
        android:id="@+id/loadgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:background="#0000"
        android:contentDescription="@string/LoadGame"
        android:onClick="loadGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507"
        app:srcCompat="@drawable/loadgame"
        tools:ignore="RtlHardcoded" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="103dp"
        android:layout_height="86dp"
        android:layout_marginBottom="230dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="#0000"
        android:contentDescription="@string/Help"
        android:onClick="help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/help"
        tools:ignore="RtlHardcoded" />

    <ImageButton
        android:id="@+id/credits"
        android:layout_width="146dp"
        android:layout_height="92dp"
        android:layout_marginBottom="230dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="#0000"
        android:contentDescription="@string/Credits"
        android:onClick="credits"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintLeft_toRightOf="@+id/help"
        app:layout_constraintRight_toLeftOf="@+id/quit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/credits" />

    <ImageButton
        android:id="@+id/quit"
        android:layout_width="118dp"
        android:layout_height="88dp"
        android:layout_marginBottom="229dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="#0000"
        android:contentDescription="@string/Quit"
        android:onClick="quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/quit"
        tools:ignore="RtlHardcoded"
        tools:layout_editor_absoluteX="458dp" />

</android.support.constraint.ConstraintLayout>
